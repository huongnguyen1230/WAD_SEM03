@{
    @model T2004E_WAD.Models.Category

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<h1>
    @ViewData["Message"]
</h1>
<h2>Thời gian: @ViewData["CurrentTime"]</h2>

<h2>Dùng với dạng ViewBag</h2>
<h3>@ViewBag.Message</h3>
<p>@ViewBag.CurrentTime</p>
@{
    // day la noi viet code C#
    var products = new string[] { "Laptop", "PC", "Telephone" };
}
<ul>
    @foreach (var product in products)
    {
        <li>Product: @product</li>

    }
</ul>
<a href="~/Home/About">About us</a>
<br />
@Html.ActionLink("Home", "Index", "Home")

<h2>Start Form Login</h2>
@{Html.BeginForm("Create", "Category");}
@Html.Label("Email")
@Html.TextBox("email")
<br />
@Html.Label("Password")
@Html.Password("password")
<br />
@Html.DropDownList("city", new SelectList(new[] { "Hà Nội", "Sài Gòn" }), "Chọn tỉnh/thành phố")
<br />
@Html.CheckBox("Remember")@Html.Label("Remember me")
<br />
@Html.RadioButton("gender", "male", true) Nam
<br />
@Html.RadioButton("gender", "female") Nữ
<br />
<button type="submit">Submit</button>
@{Html.EndForm();}

<h3>Thông tin danh mục</h3>
<h3>Tên: @Model.Name </h3>
<h3>Ảnh: @Model.Image </h3>
<h3>Mô tả: @Model.Description </h3>

<h2>Form Nhập dữ liệu cho Category</h2>
@{ Html.BeginForm();}
    @Html.ValidationSummary(true) //bat buoc phai co valid
    @Html.LabelFor(Model => Model.Name) //truyen du lieu model vao
    @Html.EditorFor(Model => Model.Name)
    @Html.LabelFor(Model => Model.Image)
    @Html.EditorFor(Model => Model.Image)
    @Html.LabelFor(Model => Model.Description)
    @Html.TextAreaFor(Model => Model.Description)
@{ Html.EndForm();}
